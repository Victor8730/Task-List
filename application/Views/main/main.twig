{% extends "template.twig" %}
{% block content %}
    <div class="col-md-12 order-md-2">
        {% if adm == 1 %}
            <div class="row mb-2 py-3">
                <div class="col-md-1"><span class="badge badge-info badge-pill" data-toggle="tooltip"
                                            data-placement="top"
                                            title="Tooltip on top">{{ countDataRows }}</span></div>
                <div class="col-md-4">
                    <form>
                        <select class="form-control change-type">
                            <option value="/main/index/?list=list" {% if typeList == 'list' %}selected{% endif %}>List</option>
                            <option value="/main/index/?list=card" {% if typeList == 'card' %}selected{% endif %}>Card</option>
                        </select>
                    </form>
                </div>

            </div>
            {% if typeList == 'card' %}
                <div class="card-deck mb-3 text-center">
                    {% include 'main/card.twig' %}
                </div>
            {% else %}
                <ul class="list-group mb-3 listTask">
                    {% include 'main/head.twig' %}
                    {% include 'main/list.twig' %}
                </ul>
            {% endif %}
            {% include 'main/pagination.twig' %}
        {% else %}
            <div class="col-md-12 text-center"><i class="fa fa-key fa-3x" aria-hidden="true"></i>
                <h3 class="h3 mb-3 font-weight-normal">You need to <a href="/admin" target="_blank">log in</a></h3>
            </div>
        {% endif %}
    </div>
{% endblock %}