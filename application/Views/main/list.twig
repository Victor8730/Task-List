{% for task in dataList %}
    <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div class="col-md-2 text-center">
            <p class="my-0">{{ task.name }}</p>
        </div>
        <div class="col-md-3 text-center">
            <p class="my-0">{{ task.email }}</p>
        </div>
        <div class="col-md-4 text-center">
            <p class="my-0">{{ task.task }}</p>
        </div>
        <div class="col-md-2 text-center">
            <p class="my-0">
                {% if task.status == 1 %}
                    <i class="fa fa-check color-green" aria-hidden="true"></i>
                {% else %}
                    <i class="fa fa-minus-circle" aria-hidden="true"></i>
                {% endif %}

                {% if task.check_admin == 1 %}
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                {% endif %}
            </p>
        </div>
        <div class="col-md-1 text-center">
            <p class="my-0">
                {% if adm == 1 %}
                    <a href="/add/edit/?id={{ task.id }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                {% endif %}
            </p>
        </div>
    </li>
{% endfor %}

