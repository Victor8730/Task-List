{% for task in dataList %}
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">{{ task.name }}</h4>
            <p><small class="text-muted">{{ task.site }}</small></p>
        </div>
        <div class="card-body">
            <p>{{ task.task }}</p>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    {% if task.status == 1 %}
                        <i class="fa fa-check color-green fa-2x px-1 pointer" aria-hidden="true" data-toggle="tooltip"
                           data-placement="top"
                           title="Task complete"></i>
                    {% else %}
                        <i class="fa fa-minus-circle fa-2x px-1 pointer" aria-hidden="true" data-toggle="tooltip"
                           data-placement="top"
                           title="Task in progress"></i>
                    {% endif %}
                    {% if task.check_admin == 1 %}
                        <i class="fa fa-pencil fa-2x px-1 pointer" aria-hidden="true" data-toggle="tooltip"
                           data-placement="top"
                           title="Task updated by admin"></i>
                    {% endif %}
                    {% if adm == 1 %}
                        <a href="/add/edit/?id={{ task.id }}"><i class="fa fa-pencil-square-o fa-2x px-1 pointer"
                                                                 aria-hidden="true" data-toggle="tooltip"
                                                                 data-placement="top" title="Change task"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endfor %}
